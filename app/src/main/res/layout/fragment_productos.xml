<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.productos.fragmentos.ProductoFragment">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider_banner"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_no_dots="true"
        app:iss_period="2000"
        app:iss_text_align="CENTER"
        app:iss_text_color="#FFFFFF"
        app:iss_title_background="@drawable/banner_bottom_sheet_dialog"
        app:iss_placeholder="@drawable/charmander_shoes"/>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>