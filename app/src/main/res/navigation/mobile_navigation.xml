<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_productos">
    <!--app:startDestination=  funciona para configurar la vista que se carga de primero, en este caso nav_productos-->
    <fragment
        android:id="@+id/nav_productos"
        android:name="com.example.tiendadezapatos.ui.productos.ProductosFragment"
        android:label="@string/menu_productos"
        tools:layout="@layout/fragment_productos" />

    <fragment
        android:id="@+id/nav_servicios"
        android:name="com.example.tiendadezapatos.ui.servicios.ServiciosFragment"
        android:label="@string/menu_servicios"
        tools:layout="@layout/fragment_servicios" />

    <fragment
        android:id="@+id/nav_sucursales"
        android:name="com.example.tiendadezapatos.ui.sucursales.SucursalesFragment"
        android:label="@string/menu_sucursales"
        tools:layout="@layout/fragment_sucursales" />
</navigation>